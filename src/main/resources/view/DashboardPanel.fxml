<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.*?>

<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:id="columns">
    <padding>
        <Insets top="8" right="8" bottom="8" left="8"/>
    </padding>

    <!-- 50 / 50 columns -->
    <columnConstraints>
        <ColumnConstraints percentWidth="50" hgrow="ALWAYS"/>
        <ColumnConstraints percentWidth="50" hgrow="ALWAYS"/>
    </columnConstraints>
    <rowConstraints>
        <RowConstraints vgrow="ALWAYS"/>
    </rowConstraints>

    <!-- LEFT column (white background) -->
    <VBox fx:id="leftColumn"
          GridPane.columnIndex="0"
          GridPane.rowIndex="0"
          spacing="8"
          VBox.vgrow="ALWAYS"
          style="-fx-background-color: white; -fx-padding: 8;"/>

    <!-- RIGHT column -->
    <VBox fx:id="rightColumn"
          GridPane.columnIndex="1"
          GridPane.rowIndex="0"
          spacing="8"
          VBox.vgrow="ALWAYS">

        <!-- Header: centered + white text -->
        <Label fx:id="rightHeader"
               text="Unpaid Trainees"
               maxWidth="Infinity"
               alignment="CENTER"
               styleClass="dashboard-section-title"
               style="-fx-text-fill: white;"/>

        <!-- List placeholder (PersonListPanel root injected here) -->
        <StackPane fx:id="rightListPlaceholder" VBox.vgrow="ALWAYS"/>
    </VBox>
</GridPane>
